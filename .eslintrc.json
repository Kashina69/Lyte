{
  "env": {
    "browser": true,        // so ESLint knows about window, document, etc.
    "es2021": true,         // modern JS features
    "node": true            // so you can use Node imports in config files
  },
  "extends": [
    "eslint:recommended",   // base recommended ESLint rules
    "plugin:prettier/recommended" // integrates Prettier with ESLint
  ],
  "parserOptions": {
    "ecmaVersion": 12,      // ES2021
    "sourceType": "module"  // allows import/export
  },
  "rules": {
    // Customize here if you want
    "no-unused-vars": "warn",     // warn, donâ€™t error, for unused variables
    "no-console": "off"           // allow console.log for now
  }
}

